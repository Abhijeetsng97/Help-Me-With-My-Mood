<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/back">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mood Analyser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="24dp"
            android:id="@+id/heading"
            android:textSize="24dp"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/insta_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/heading"
            android:background="@drawable/white_rounded_button"
            android:padding="16dp"
            android:text="Instagram Data" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/twitter_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/insta_login"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_rounded_button"
            android:padding="16dp"
            android:text="Twitter Data" />


        <android.support.v7.widget.AppCompatButton
            android:id="@+id/check_mood_once"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/twitter_login"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_rounded_button"
            android:padding="16dp"
            android:text="Check Mood Once" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/check_mood_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_mood_once"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_rounded_button"
            android:padding="16dp"
            android:text="Check Mood Service Start" />

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/check_mood_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_mood_start"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/white_rounded_button"
            android:padding="16dp"
            android:text="Check Mood Service Stop" />

    </RelativeLayout>

</ScrollView>